@model WebApplication1.QueryBooks_QueryFormViewModel

@{
    ViewBag.Title = "QueryBooks";
}
<h2>@ViewBag.Title</h2>
<hr />
<div>
    <nav class="navbar navbar-default" role="navigation">
        <div class="collapse navbar-collapse">
            <div class="navbar-header">
                <a class="navbar-brand" href="#">Filter</a>
            </div>
            @using (Html.BeginForm("QueryBooks", "Report", FormMethod.Post, new { @class = "navbar-form navbar-left", role = "search" }))
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(model => model.DoExport)
                <div class="form-group">
                    <label class="sr-only" for="queryBookName">Email address</label>
                    @Html.EditorFor(model => model.queryBookName, new { htmlAttributes = new { placeholder = Html.DisplayNameFor(model => model.queryBookName), @class = "form-control" } })
                </div>
                <div class="form-group">
                    <label class="sr-only" for="queryAuthor">Email address</label>
                    @Html.EditorFor(model => model.queryAuthor, new { htmlAttributes = new { placeholder = Html.DisplayNameFor(model => model.queryAuthor), @class = "form-control" } })
                </div>
                <button type="submit" class="btn btn-default" id="SearchButton"><span class="glyphicon glyphicon-search"></span> Search</button>
                @Html.ValidationSummary(false, "", new { @class = "text-danger" })
            }

            <ul class="nav navbar-nav navbar-right">
                <li>
                    <a href="#" id="ExportButton"><span class="glyphicon glyphicon-save"></span> Export</a>
                </li>
            </ul>

        </div>
    </nav>
</div>

@{
    if (Model != null)
    {
        @Html.Partial("_QueryBooks", Model.Result)
    }
}
     
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        $(function () {
            $('#SearchButton').click(function () {
                $('#DoExport').val(false);
            })

            $('#ExportButton').click(function () {
                $('#DoExport').val(true);
                $('#DoExport').closest("form").submit();
            })
        })
    </script>
}

